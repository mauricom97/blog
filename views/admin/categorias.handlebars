<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add" <button class="btn btn-success">Cadastrar nova categoria</button></a>


{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Data de criação: {{date}}</small>
            <br>
            <br>
          <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success">Editar categoria</button></a>
        </div>
    </div>
{{else}}

{{/each}}
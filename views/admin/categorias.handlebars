<h1 class="display-1">Lista de categorias:</h1>
<hr>
<a href="/admin/categorias/add" <button class="btn btn-success">Cadastrar nova categoria</button></a>


{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Data de criação: {{date}}</small>
            <br>
            <br>
          <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success">Editar categoria</button></a>
        <form action="/admin/categorias/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
        </form>
        
        </div>
    </div>
{{else}}
<h1 class="display-4">Nunhuma categoria cadastrada</h1>
{{/each}}